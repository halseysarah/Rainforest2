  <script src="http://code.jquery.com/jquery.js"></script>
  <script src="js/bootstrap.min.js"></script>
</head>

<div class="logo">
  <div class="container">
  <img src="http://s18.postimg.org/61z0hpf7t/logo.png">
</div>
</div>

<div class="nav"> 
	<div class="container">
		<ul class="nav nav-pills pull-left">
  		<li><a href="/products">Home</a></li>
  		<li><a href="/products/new/">Add New Product</a></li>
    </ul>
    <ul class="nav nav-pills pull-right">
  		<li><a href="/sessions/new/">Log In</a></li>
  		<li><a href="/users/new/">Sign Up</a></li>
  	</ul>
	</div>
</div>


<div class="showproducts">
  <div class="container">
      	<th><h4>Title:</h4> <%= @product.title %></th><br>
		<th><h4>Author:</h4> <%= @product.author %></th><br>
		<th><%= image_tag @product.url, :size => "150x200" %></th><br>
		<th><h4>Price:</h4> $<%= @product.price_in_cents %></th><br>
		<th><h4>Description:</h4> <%= @product.description %></th><br>
  <div>
  <br>
  <%= link_to "Back to Products", products_url %> | <%= link_to "Edit", edit_product_path(@product) %> | <%= link_to "Delete", @product, :confirm => "Are you sure you want to delete this product?", :method => :delete %>
</div>


<% if current_user %>
<h3>Reviews</h3>

	<p>Reviews for <%= @product.title %></p>

	<% @product.reviews.each do |review| %>
		<p>	
			<%= review.comment %>
			<br>
			<% if review.user !=nil %>
				<em> by <%= review.user.name %></em>
				Added on: <%= review.created_at %>
			<% end %>
		</p>
	<% end %>
<% end %>

  <h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<br>
<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a review.</p> 
